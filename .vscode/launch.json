{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Run TypeScript with ts-node",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/node_modules/.bin/ts-node",
        "args": [
          "${file}"  // Executa o arquivo TypeScript aberto
        ],
        "outFiles": [
          "${workspaceFolder}/**/*.js"  // Para mapear os arquivos TypeScript para os arquivos JavaScript gerados
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  